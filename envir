#!/bin/bash

export PAGER="most"

export PATH="$PATH:$HOME/bin:$HOME/.dotfiles/bin"
export PATH="$PATH:$HOME/ext-repos/bin"
export PATH="$PATH:$HOME/.cabal/bin"
export PATH="$HOME/.rbenv/bin:$PATH"

export EDITOR="vim"
export RI="--format ansi"

[[ -s "$HOME/me/dotfiles/HOSTS" ]] && export HOSTALIASES=~/me/dotfiles/HOSTS
[[ -s "$HOME/me/dotfiles/envir" ]] && . "$HOME/me/dotfiles/envir"
