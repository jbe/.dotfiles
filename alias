#!/bin/bash

if ls --version 2>/dev/null | grep -q 'coreutils'; then
    alias ls='ls --color=auto'
else
    alias ls='ls -G'
fi

# Handy ls shortcuts
alias ll='ls -lh'
alias la='ls -A'
alias l='ls'

# Moving in dirs
alias ..='cd ..'
alias ...='cd ../..'

alias tn='tmux new-window'
alias ts='tmux split-window'

alias shtop='sudo htop'
alias v='vim'
alias g='gvim'
alias sv='sudo vim'

# Nim build scripts
alias cook='./cook'

alias ga='git add'
alias gc='git commit'
alias gs='git status'
#alias gac='git add -A && git commit'
#alias gacp='git add -A && git commit && git push'
# For vundle:
alias vim='env GIT_SSL_NO_VERIFY=true vim'

alias uio="ssh -Y josteibe@login.ifi.uio.no"
alias hemulen="ssh -Y s.jostein.be"
alias uiowin="rdesktop -d UiO -f windows.ifi.uio.no"
alias uiomount="sshfs josteibe@login.ifi.uio.no: /home/jbe/uiodisk -o reconnect,modules=iconv,from_code=ISO-8859-1"
